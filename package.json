    "linkedin-api-client": "^0.3.0",
    "raw-body": "^3.0.0",
    "vitest": "^3.0.9",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.24",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3"
  }
}