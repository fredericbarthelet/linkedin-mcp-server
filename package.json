{
  "name": "mcp-server-linkedin",
  "version": "0.1.0",
  "description": "MCP server for interacting with Linkedin API",
  "private": true,
  "type": "module",
  "bin": {
    "mcp-server-linkedin": "./build/index.js"
  },
  "files": [
    "build"
  ],
